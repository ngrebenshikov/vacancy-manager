@model IEnumerable<Applican.Models.Applicant>
@{
  ViewBag.Title = "Список кандидатов";
}
<h2>
  Список кандидатов</h2>
<p>
  @Html.ActionLink("Создать нового кандидата", "Create")
</p>
<table>
  <tr>
    <th>
      Имя
    </th>
    <th>
      Фамилия
    </th>
    <th>
      Отчество
    </th>
    <th>
      E-Mail
    </th>
    <th>
    Резюме
    </th>
    <th>
    </th>
  </tr>
  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.FirstName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.SecondName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.MiddleName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.EMail)
      </td>
      <td style="white-space: nowrap; text-align: right">
      @{if (item.FileName != "")
          {
          @Html.ActionLink("Скачать резюме", "DownloadSummary", new { id = item.ID }) @: |
          }
          else
          {
            @:Резюме не загружено |
          }
        }
        @Html.ActionLink("Загрузить резюме", "UploadSummary", new { id = item.ID })
      </td>
      <td>
        @Html.ActionLink("Редактировать", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Детали", "Details", new { id = item.ID }) |
        @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
      </td>
    </tr>
  }
</table>
