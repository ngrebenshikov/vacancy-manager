@model IEnumerable<Employees.Models.Employee>

@{
    ViewBag.Title = "Список работников";
}

<h2>Список работников</h2>

<p>
    @Html.ActionLink("Создать нового", "Create")
</p>
<table>
    <tr>
        <th>
            Фамилия
        </th>
        <th>
            Имя
        </th>
        <th>
            Отчество
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MiddleName)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.EmployeeID }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.EmployeeID }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.EmployeeID })
        </td>
    </tr>
}

</table>
